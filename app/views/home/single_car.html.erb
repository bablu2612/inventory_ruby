	<script>
		function showPriceInq(){
			$("#asking_model").removeClass("hidden")
		}

		function closePriceInq(){
			$("#asking_model").addClass("hidden")
		}

		ZC.LICENSE = ["569d52cefae586f634c54f86dc99e6a9", "b55b025e438fa8a98e32482b5f768ff5"];
		

		let chartConfig = {
			type: 'gauge',
			globals: {
				fontSize: '25px',
			},
			plot: {
				tooltip: {
					borderRadius: '5px',
				},
			
				size: '100%',
			},
			plotarea: {
				marginTop: '80px',
			},
			scaleR: {
				aperture: 180,
				center: {
					visible: false,
				},
				item: {
					offsetR: 0,
					rules: [{
						offsetX: '15px',
						rule: '%i == 9',
					},],
				},
				labels: ['Low','','','',  'Good','','','',  'Best'],
				maxValue: 850,
				minValue: 150,
				ring: {
					rules: [{
						backgroundColor: '#9dc3e7',
						rule: '%v <= 200',
					},
					{
						backgroundColor: '#4472c7',
						rule: '%v > 200 && %v < 700',
					},
					{
						backgroundColor: '#1f4e78',
						rule: '%v >= 700',
					},
					],
					size: '50px',
				},
				// step: 50,
				tick: {
					visible: false,
				},
			},
			
			series: [{
				// values: ["<%= @car_detail.pointer.to_i %>"], // starting value
				values: [400], // starting value
                backgroundColor: '#009688',

			
			},],
		};

		zingchart.render({
			id: 'myChart',
			data: chartConfig,
			height: '100%',
			width: '100%',
		});
	</script>

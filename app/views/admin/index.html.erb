<div class="px-4 sm:px-6 lg:px-8 ">
  <div class="sm:flex sm:items-center header_admin">
    <div class="sm:flex-auto">
      <div class="flex gap-[20px] w-full items-center">
        <h2 class="text-xl font-semibold text-gray-900">Car lists</h2>
        
        </div>
      
      <p class="mt-2 text-sm text-gray-700">A list of all the cars.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none flex">
    <%= button_to 'New Car Details', "/car_details/new", method: :get, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto" %>
    </div>
  </div>
  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
              
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Year</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Make</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Model</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Trim</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Mileage</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">fuel_type</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Color</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">vehicle_condition</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">title_status</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Zipcode</th>
                <th scope="col" class="px-3 py-3.5 text-center text-sm font-semibold text-gray-900">Actions</th>

          
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">

            <% @car_details&.each do |car| %>

            <tr>
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"><%= car.year %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.make %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.model %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.trim %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.mileage %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.fuel_type %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.color %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.vehicle_condition %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.title_status %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= car.zip_code %></td>



              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                <div class="icons" style="display: flex; gap: 2px">
                <%= link_to "/single_car/#{car.id}", class: "text-indigo-600 hover:text-indigo-900",target: "_blank" do %>
                    <i class="fa-solid fa-eye"></i>
                  <% end %>
                                  <%= link_to edit_car_detail_path(car.id),target: "_blank", class: "text-indigo-600 hover:text-indigo-900" do %>

                  <i class="fa-regular fa-pen-to-square"></i>

                  <% end %>

                   <%= button_to car_detail_path(car.id), method: :delete,data: {confirm: "Are you sure to delete this Car?"}, class: "text-indigo-600 hover:text-indigo-900" do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>

               </div>
              </td>
              </tr>

                <% end %>               


            

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</div>


			<div class="recent-car-content">
				<div class="row">
					<div class="col-md-12 col-sm-12 px-0">
						<div class="row">
              <% @car_details&.each do |car| %>
                <div class="col-md-4 <%=  car.sold_out ? 'sold-out' : '' %>">
					<div class="box_xs">
					<a href="/single_car/<%= car.id %>">
                  <div class="car-item">
                    <div class="thumb-content">
                      <div class="thumb-inner listing_page">
                       <img src="<%= car.images.attached? ? rails_blob_path(car.images.first, only_path: true) : ""%>" alt="">
                      </div>
                    </div>
                    <div class="down-content">
					<button class="type_deal <%= (car&.deal_type != nil && car&.deal_type != "") ? car&.deal_type : 'hidden_class'  %>"> <%= car&.deal_type == "new" ? "NEW" : car&.deal_type == "hot" ? "HOT DEAL" :car&.deal_type == "drop" ? "Drop Price" : '' %> </button> 
                      <h4 class="title_listing"><div class="heading"><%= "#{car.year} #{car.make} #{car.model} #{car.trim}" %> 	</div> <span class="price-data"> <%= car&.asking_price != nil ? " $#{number_with_delimiter(car&.asking_price&.to_i)}" : ''  %> </span></h4>
                      <ul class="car-info">
                        <li><div class="item"><i class=""><img  src="/assets/logo_mileage.png" alt="" /></i><p><%= number_with_delimiter(car.mileage.to_i)%> mile</p></div></li>
                        <li><div class="item"><i class=""><img  src="/assets/logo_vehicle_condition.png" alt="" /></i><p><%= car.vehicle_condition %></p></div></li>
                        <li><div class="item"><i class=""><img  src="/assets/logo_title_status.png" alt="" /></i><p><%= car.title_status %></p></div></li>
                       <li><div class="item"><i class=""><img  src="/assets/logo_zip_code.png" alt="" /></i><p><%= car.zip_code %></p></div></li>

				      </ul>
					  
                    </div>
                  </div>
				  </a>
<div class="sold-out-image"><img  src="/assets/deal_pending_icon.png" alt="" /> </div>

					
					</div>
                </div>
              <% end %>
							
